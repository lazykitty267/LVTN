<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="TÊN CƠ QUAN, TC CHỦ QUẢN:"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/company_name_input"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Tinh Ký"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/company_name"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/chxhcnvn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_name"
            android:layout_marginTop="20dp"
            android:text="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/dltdhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chxhcnvn"
            android:layout_marginTop="10dp"
            android:text="Độc lập – Tự do – Hạnh phúc"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dltdhp"
            android:layout_marginTop="10dp"
            android:text="BIÊN BẢN CUỘC HỌP GIAO BAN"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />
        <TextView
            android:gravity="center"
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="15dp"
            android:text="Thời gian bắt đầu:"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            />
        <EditText
            android:id="@+id/start_time_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/start_time"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="15dp"
            android:text="7h30p"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_below="@+id/start_time"
            android:layout_marginTop="15dp"
            android:text="Địa điểm:"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            />
        <EditText
            android:id="@+id/place_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/start_time"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/start_time"
            android:layout_marginTop="15dp"
            android:text="7h30p"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_below="@+id/place"
            android:layout_marginTop="15dp"
            android:text="Thành phần tham dự gồm:"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="6"
            android:id="@+id/member_input"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:hint="Phan Thành Phú\nNguyễn Thái Sơn Long"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/member"
            android:textStyle="bold"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/member_input"
            android:layout_marginTop="15dp"
            android:text="Nội dung:"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="6"
            android:id="@+id/content_input"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:hint="Phan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn LongPhan Thành Phú\nNguyễn Thái Sơn Long"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/content"
            android:textStyle="bold"
            />

    </RelativeLayout>
</ScrollView>